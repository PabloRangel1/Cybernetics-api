package dev.cadastroDeColaboradores.Tarefas;

import org.springframework.web.bind.annotation.*;

import java.util.Optional;

@RestController
@RequestMapping("tarefas")
public class TarefasController {
    // LOCALHOST:8080/tarefas/crud <-"controller"
    // TODO: De maneira mais simples vou conectar diretamente com a model
    // Fazer inputs manualmente no banco de dados e apenas 

    TarefasRepository tarefasRepo;

    public TarefasController(TarefasRepository tarefasRepo) {
        this.tarefasRepo = tarefasRepo;
    }

    @GetMapping("/listar") //Faz um read das nossas infos que vao vir de uma LIST
    public Optional<TarefasModel> listarTarefa(long id) {
        return tarefasRepo.findById(id);
    }

    @PostMapping("/criar") //Envio da infos
    public String criarTarefa() {
        return "Tarefa criada com sucesso";
    }

    @PutMapping("/alterar") // altera nossas tarefas
    public String alterarTarefa() {
        return "Tarefa atualizada";
    }

    @DeleteMapping("deletar") // deletaa uma tarefa
    public String deletar() {
        return "Tarefa deletada";
    }


}
